<form action="/memos/<%= @memo["id"] %>" method="post">
    <div class="form-group">
        <label for="title">タイトル</label>
        <input type="text" name="title" class="form-control" style="width:200px;" value="<%= @memo["title"] %>">
    </div>
    <div class="form-group">
        <label for="content">本文</label>
        <textarea name="content" class="form-control" style="width:200px;"><%= @memo["content"] %></textarea>
    </div>
    <div class="button-wrapper">
        <input type="hidden" name="_method" class="edit-button" value="patch"><br>
        <input type="submit" value="編集完了" button type="button" class="btn btn-info edit-button">
</form>